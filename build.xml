<?xml version="1.0" encoding="UTF-8"?>
<project name="java_demo" default="all">
  
  
  <property file="java_demo.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Application Server Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="jgoodies-forms.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module java_demo -->
  
  <dirname property="module.java_demo.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.java_demo" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.java_demo" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.java_demo" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.java_demo" value="-encoding UTF-8 -source 7 -target 7 ${compiler.args}"/>
  
  <property name="java_demo.output.dir" value="${module.java_demo.basedir}/WebRoot/WEB-INF/classes"/>
  <property name="java_demo.testoutput.dir" value="${module.java_demo.basedir}/WebRoot/WEB-INF/classes"/>
  
  <path id="java_demo.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="java_demo.module.production.classpath">
    <path refid="${module.jdk.classpath.java_demo}"/>
    <fileset dir="${basedir}/WebRoot/WEB-INF/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="java_demo.runtime.production.module.classpath">
    <pathelement location="${java_demo.output.dir}"/>
    <fileset dir="${basedir}/WebRoot/WEB-INF/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="java_demo.module.classpath">
    <path refid="${module.jdk.classpath.java_demo}"/>
    <pathelement location="${java_demo.output.dir}"/>
    <fileset dir="${basedir}/WebRoot/WEB-INF/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="java_demo.runtime.module.classpath">
    <pathelement location="${java_demo.output.dir}"/>
    <fileset dir="${basedir}/WebRoot/WEB-INF/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  
  <patternset id="excluded.from.module.java_demo">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.java_demo">
    <patternset refid="excluded.from.module.java_demo"/>
  </patternset>
  
  <path id="java_demo.module.sourcepath">
    <dirset dir="${module.java_demo.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.java_demo" depends="compile.module.java_demo.production,compile.module.java_demo.tests" description="Compile module java_demo"/>
  
  <target name="compile.module.java_demo.production" depends="register.custom.compilers" description="Compile module java_demo; production classes">
    <mkdir dir="${java_demo.output.dir}"/>
    <javac2 destdir="${java_demo.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.java_demo}/javac">
      <compilerarg line="${compiler.args.java_demo}"/>
      <bootclasspath refid="java_demo.module.bootclasspath"/>
      <classpath refid="java_demo.module.production.classpath"/>
      <src refid="java_demo.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.java_demo"/>
    </javac2>
    
    <copy todir="${java_demo.output.dir}">
      <fileset dir="${module.java_demo.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.java_demo.tests" depends="register.custom.compilers,compile.module.java_demo.production" description="compile module java_demo; test classes" unless="skip.tests"/>
  
  <target name="clean.module.java_demo" description="cleanup module">
    <delete dir="${java_demo.output.dir}"/>
    <delete dir="${java_demo.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.java_demo, clean.artifact.java_demo:war_exploded" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.java_demo" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.helloworld" value="${basedir}/out/artifacts/helloworld"/>
    <property name="artifact.output.java_demo:war" value="${basedir}/out/artifacts/java_demo_war"/>
    <property name="artifact.output.java_demo:war_exploded" value="${basedir}/out/artifacts/java_demo_war_exploded"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.helloworld.war" value="${artifacts.temp.dir}/helloworld.war"/>
    <property name="temp.jar.path.java_demo_war.war" value="${artifacts.temp.dir}/java_demo_war.war"/>
  </target>
  
  <target name="clean.artifact.java_demo:war_exploded" description="clean java_demo:war exploded artifact output">
    <delete dir="${artifact.output.java_demo:war_exploded}"/>
  </target>
  
  <target name="artifact.helloworld" depends="init.artifacts" description="Build &#39;helloworld&#39; artifact">
    <property name="artifact.temp.output.helloworld" value="${artifacts.temp.dir}/helloworld"/>
    <mkdir dir="${artifact.temp.output.helloworld}"/>
    <war destfile="${temp.jar.path.helloworld.war}">
      <zipfileset dir="${basedir}/WebRoot"/>
    </war>
    <copy file="${temp.jar.path.helloworld.war}" tofile="${artifact.temp.output.helloworld}/helloworld.war"/>
  </target>
  
  <target name="artifact.java_demo:war" depends="init.artifacts, artifact.java_demo:war_exploded" description="Build &#39;java_demo:war&#39; artifact">
    <property name="artifact.temp.output.java_demo:war" value="${artifacts.temp.dir}/java_demo_war"/>
    <mkdir dir="${artifact.temp.output.java_demo:war}"/>
    <war destfile="${temp.jar.path.java_demo_war.war}">
      <zipfileset dir="${artifact.output.java_demo:war_exploded}"/>
    </war>
    <copy file="${temp.jar.path.java_demo_war.war}" tofile="${artifact.temp.output.java_demo:war}/java_demo_war.war"/>
  </target>
  
  <target name="artifact.java_demo:war_exploded" depends="init.artifacts, compile.module.java_demo" description="Build &#39;java_demo:war exploded&#39; artifact">
    <mkdir dir="${artifact.output.java_demo:war_exploded}"/>
    <copy todir="${artifact.output.java_demo:war_exploded}">
      <fileset dir="${basedir}/WebRoot"/>
    </copy>
    <mkdir dir="${artifact.output.java_demo:war_exploded}/WEB-INF"/>
    <!--copy file="${basedir}/WebRoot/WEB-INF/web.xml" tofile="${artifact.output.java_demo:war_exploded}/WEB-INF/web.xml"/-->
    <mkdir dir="${artifact.output.java_demo:war_exploded}/WEB-INF"/>
    <mkdir dir="${artifact.output.java_demo:war_exploded}/WEB-INF/classes"/>
    <copy todir="${artifact.output.java_demo:war_exploded}/WEB-INF/classes">
      <fileset dir="${java_demo.output.dir}"/>
    </copy>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.helloworld, artifact.java_demo:war, artifact.java_demo:war_exploded" description="Build all artifacts">
    <mkdir dir="${artifact.output.helloworld}"/>
    <copy todir="${artifact.output.helloworld}">
      <fileset dir="${artifact.temp.output.helloworld}"/>
    </copy>
    <mkdir dir="${artifact.output.java_demo:war}"/>
    <copy todir="${artifact.output.java_demo:war}">
      <fileset dir="${artifact.temp.output.java_demo:war}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>